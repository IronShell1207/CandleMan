<UserControl
    x:Class="CandleMan.CandleStick"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CandleMan"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Rectangle Width="3" Fill="Green" x:Name="ShadowRect" VerticalAlignment="Top"/>
        <Rectangle Width="20"  VerticalAlignment="Top" x:Name="BodyRect">
            <Rectangle.Fill>
                <SolidColorBrush Color="{x:Bind FillColor, Mode=TwoWay}"></SolidColorBrush>
            </Rectangle.Fill>
            <Rectangle.RenderTransform>
                <CompositeTransform x:Name="BodyTrans"  ></CompositeTransform>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Grid>
</UserControl>
